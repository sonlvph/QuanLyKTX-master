<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".UpdateStudentActivity">
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:id="@+id/edtUpdateFullname"
        android:hint="Mời bạn nhập tên sinh viên"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:id="@+id/edtUpdateDate"
        android:hint="Mời bạn nhập năm sinh"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:id="@+id/edtUpdateAdress"
        android:hint="Mời bạn nhập quê quán"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:id="@+id/edtUpdatePhone"
        android:hint="Mời bạn nhập sô điện thoại"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center">

        <Button
            android:id="@+id/btn_aAddGoods"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
android:onClick="updateStudent"
            android:text="Update " />

        <Button
            android:id="@+id/btn_aCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Hủy" />

    </LinearLayout>
</LinearLayout>